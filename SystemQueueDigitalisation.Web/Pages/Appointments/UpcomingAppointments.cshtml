@page
@model SystemQueueDigitalisation.Web.Pages.Appointments.UpcomingAppointmentsModel
@{
    ViewData["Title"] = "📅 Upcoming Appointments";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-3">@ViewData["Title"]</h2>
        <p class="text-muted">See your upcoming appointments and manage them easily.</p>

        @if (Model.UpcomingAppointments == null || !Model.UpcomingAppointments.Any())
        {
            <div class="alert alert-info">You have no upcoming appointments.</div>
        }
        else
        {
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Queue Number</th>
                        <th>Provider</th>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model.UpcomingAppointments)
                    {
                        <tr>
                            <td>@app.QueueNumber</td>
                            <td>@app.ProviderName</td>
                            <td>@app.ServiceName</td>
                            <td>@app.AppointmentTime</td>
                            <td>
                                <span class="badge bg-warning text-dark">Upcoming</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

