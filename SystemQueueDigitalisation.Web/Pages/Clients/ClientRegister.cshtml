@page
@model SystemQueueDigitalisation.Web.Pages.Clients.ClientRegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register as Provider</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="RegisterRequest.FirstName"></label>
        <input asp-for="RegisterRequest.FirstName" class="form-control" />
        <span asp-validation-for="RegisterRequest.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.LastName"></label>
        <input asp-for="RegisterRequest.LastName" class="form-control" />
        <span asp-validation-for="RegisterRequest.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.ContactInfo"></label>
        <input asp-for="RegisterRequest.ContactInfo" class="form-control" />
        <span asp-validation-for="RegisterRequest.ContactInfo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Adress"></label>
        <input asp-for="RegisterRequest.Adress" class="form-control" />
        <span asp-validation-for="RegisterRequest.Adress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.City"></label>
        <input asp-for="RegisterRequest.City" class="form-control" />
        <span asp-validation-for="RegisterRequest.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.PostCode"></label>
        <input asp-for="RegisterRequest.PostCode" class="form-control" />
        <span asp-validation-for="RegisterRequest.PostCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.AdressNumber"></label>
        <input asp-for="RegisterRequest.AdressNumber" class="form-control" />
        <span asp-validation-for="RegisterRequest.AdressNumber" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="RegisterRequest.BoxNumber"></label>
        <input asp-for="RegisterRequest.BoxNumber" class="form-control" />
        <span asp-validation-for="RegisterRequest.BoxNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.BirthDate"></label>
        <input asp-for="RegisterRequest.BirthDate" type="date" class="form-control" />
        <span asp-validation-for="RegisterRequest.BirthDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Email"></label>
        <input asp-for="RegisterRequest.Email" type="email" class="form-control" />
        <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.PasswordHash"></label>
        <input asp-for="RegisterRequest.PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="RegisterRequest.PasswordHash" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Age"></label>
        <input asp-for="RegisterRequest.Age" type="number" class="form-control" />
        <span asp-validation-for="RegisterRequest.Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Register</button>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

