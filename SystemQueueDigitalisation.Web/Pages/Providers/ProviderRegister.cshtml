@page
@model SystemQueueDigitalisation.Web.Pages.Providers.ProviderRegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register as Provider</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="RegisterRequest.Name"></label>
        <input asp-for="RegisterRequest.Name" class="form-control" />
        <span asp-validation-for="RegisterRequest.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Email"></label>
        <input asp-for="RegisterRequest.Email" type="email" class="form-control" />
        <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Password"></label>
        <input asp-for="RegisterRequest.Password " type="password" class="form-control" />
        <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegisterRequest.Type"></label>
        <input asp-for="RegisterRequest.Type" class="form-control" />
        <span asp-validation-for="RegisterRequest.Type" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-2">Register</button>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
