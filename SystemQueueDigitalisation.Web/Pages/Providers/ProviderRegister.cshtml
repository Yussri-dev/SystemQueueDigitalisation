@page
@model SystemQueueDigitalisation.Web.Pages.Providers.ProviderRegisterModel

@{
    ViewData["Title"] = "Provider Registration";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow p-4 w-100" style="max-width: 500px;">
        <h3 class="text-center text-success mb-4">Register as Provider</h3>

        <form method="post">
            <div class="mb-3">
                <label asp-for="RegisterRequest.Name" class="form-label">Name</label>
                <input asp-for="RegisterRequest.Name" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="RegisterRequest.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RegisterRequest.Email" class="form-label">Email</label>
                <input asp-for="RegisterRequest.Email" type="email" class="form-control" placeholder="example@domain.com" />
                <span asp-validation-for="RegisterRequest.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RegisterRequest.Password" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="RegisterRequest.Password" type="password" class="form-control" id="passwordInput" placeholder="Choose a secure password" />
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword">👁️</button>
                </div>
                <span asp-validation-for="RegisterRequest.Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RegisterRequest.Type" class="form-label">Provider Type</label>
                <input asp-for="RegisterRequest.Type" class="form-control" placeholder="e.g., Dentist, Therapist, Consultant" />
                <span asp-validation-for="RegisterRequest.Type" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">📝 Register</button>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info mt-3">@Model.Message</div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("passwordInput");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            this.textContent = type === "password" ? "👁️" : "🙈";
        });
    </script>
}
