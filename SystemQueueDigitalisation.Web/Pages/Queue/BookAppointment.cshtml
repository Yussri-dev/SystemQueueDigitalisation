@page
@model SystemQueueDigitalisation.Web.Pages.Queue.BookAppointmentModel
@{
    Layout = "_ClientLayout";
}


<h2>Book Appointment</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="ServiceId">Service ID</label>
        <input type="number" class="form-control" id="ServiceId" name="BookAppointmentRequest.ServiceId" required />
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Appointment Date</label>
        <input type="datetime-local" class="form-control" id="AppointmentDate" name="BookAppointmentRequest.AppointmentDate" required />
    </div>

    <button type="submit" class="btn btn-primary">Book Appointment</button>
</form>

